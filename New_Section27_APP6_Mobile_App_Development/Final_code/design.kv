<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size : "25sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id : password
                password : True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press : root.login_handler()
                    size_hint : 0.3,0.5
                    pos_hint : {'center_x' : 0.5, 'center_y' : 0.6}
            Label:
                id: errorMsg
                text : ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 15, 15
            spacing: 20, 20
            Button:
                text: "Forgot Password ? "
                background_color : (1,1,1,0) if self.state =='normal' else (255,255,255,1)
                opacity: 1 if self.state =='normal' else 0.5
                color : 0.1,0.7,1,1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color : (1,1,1,0) if self.state =='normal' else (255,255,255,1)
                opacity: 1 if self.state =='normal' else 0.5
                color : 0.1,0.7,1,1

<SignUpScreen>:
    GridLayout:
        cols : 1
        padding : 15,15
        spacing : 25,25
        Label:
            text : "Sign UP"
            font_size : "25sp"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            password : True
            hint_text: "Password"
        RelativeLayout:
            Button:
                text: "Sign Up"
                on_press: root.sign_up_handler(root.ids.username.text, root.ids.password.text)
                background_color : 1,0.5,0,1
                size_hint: 0.3,0.5
                pos_hint: {'center_x':0.5}
        RelativeLayout:
            Button:
                text: "Go Back"
                on_press: root.back()
                background_color : 255,255,255,1
                size_hint: 0.2,0.5
                color : 0,0,0,1
                opacity: 1 if self.state =='normal' else 0.5
                pos_hint: {'center_x':0.5}

<SignUpSuccess>:
    GridLayout:
        cols : 1
        Label:
            text : "Sign UP Successful"
        Button:
            text: "Go to Login"
            on_press: root.login()

<HomeScreen>:
    GridLayout:
        cols: 1
        padding : 15,15
        spacing : 25,25
        RelativeLayout:
            CustomImageButton:
                text: "Log Out"
                on_press : root.logout()
                source : "logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint : 0.2, 0.3
                pos_hint : {'center_x' : 0.9, 'center_y':0.8}

        Label:
            text: "How do you feel ?"
        TextInput:
            id : feeling
            hint_text: "Try : Happy , Sad , etc"
        Button:
            text: "Enlighten me !!"
            on_press : root.show_quote()
        ScrollView:
            Label:
                id: quote
                text : ""
                text_size : self.width, None
                size_hint_y : None
                height : self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login"
    SignUpScreen:
        name : "signup"
    SignUpSuccess:
        name : "signup_success"
    HomeScreen:
        name : "home"