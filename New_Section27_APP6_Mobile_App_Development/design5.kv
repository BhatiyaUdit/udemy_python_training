<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password ? "
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols : 1
        Label:
            text : "Sign UP"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign Up"
            on_press: root.sign_up_handler(root.ids.username.text, root.ids.password.text)
        Button:
            text: "Go Back"
            on_press: root.back()

<SignUpSuccess>:
    GridLayout:
        cols : 1
        Label:
            text : "Sign UP Successful"
        Button:
            text: "Go to Login"
            on_press: root.login()

<RootWidget>:
    LoginScreen:
        name: "login"
    SignUpScreen:
        name : "signup"
    SignUpSuccess:
        name : "signup_success"